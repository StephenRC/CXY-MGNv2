///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
include <cxy-mgnv2-h.scad>
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

spool();

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module spool() {
	frame_mount();
	mount();
}

//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module mount() {
	difference() {
		translate([sq_w+12,sq_w+10,sq_d+8]) rotate([90,0,0]) cylinder(h=sq_w+10,d=30,$fn=100);
		al_sq_slots_m();
		screw_hole();
	}
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module screw_hole() {
	translate([sq_w+12,sq_w+12,sq_d+8]) rotate([90,0,0]) cylinder(h=sq_w+15,d=screw8,$fn=100);
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module al_sq_slots_m() { // square al slots
	translate([50,sq_w-3,sq_d-7]) color("Red") cube([150,sq_w,sq_d],true);		// horz
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////

module frame_mount(FullWrap=0) {
	difference() {
		if(FullWrap) color("lightgrey") cubeX([60,sq_w+10,sq_d+10],2); // install during main frame assembly
		else color("lightgrey") cubeX([60,sq_w+10,sq_d+6.1],2); // installable after main frame is assembled
		al_sq_slots_m();
		screw_hole();
	}
}
